<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.geometryproject.controller.MainMenuController" spacing="10" alignment="CENTER" stylesheets="../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Start Game" onAction="#startGame"/>
    <Button text="Settings" onAction="#openSettings"/>
    <Button text="Exit" onAction="#exitGame"/>
</VBox>
